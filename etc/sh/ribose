#! /bin/bash
#echo "ALL: $*"
#set -x
vmargs=""
jars="$(dirname $(readlink -f $0))/../../jars"
trun="java -cp $jars/ribose-0.0.0.jar com.characterforming.ribose.TRun"
while [[ "$1" =~ ^[-][^-] ]]; do
	vmargs="$vmargs $1";
	shift
done
nil=""
if [[ "$1" == "--nil" ]]; then
  nil="$1"
  shift
fi
target="com.characterforming.ribose.TRun"
if [[ "$1" == "--target" ]]; then
  target="$2"
  shift 2
fi
if (($#!=3 && $# != 4)); then
	echo 'Usage: ribose [<vm-arg> ...] [--nil] [--target <target-class-name>] <transducer> <input-file> <model-file> [<output-file>]'
  echo 'Default target is com.characterforming.ribose.TRun; default output stream is System.out'
else
  args="$1 $2 $3"
  if (($#==4)); then
    args="$args $4"
  fi
	$trun $nil $target $args
fi
#set +x