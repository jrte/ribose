#! /bin/bash
#set -x
vmargs=""
while [[ "$1" =~ ^[-][^-] ]]; do
	vmargs="$vmargs $1";
	shift
done
nil=""
if [[ "$1" == "--nil" ]]; then
  nil="$1"
  shift
fi
target="com.characterforming.ribose.TRun"
if [[ "$1" == "--target" ]]; then
  target="$2"
  shift 2
fi
if (($#!=3 && $# != 4)); then
	echo 'Usage: ribose [<vm-arg> ...] [--nil] [--target <target-class-name>] <transducer> <input-file> <model-file> [<output-file>]'
  echo 'Default target is com.characterforming.ribose.TRun; default output stream is System.out'
else
  jars="$(dirname $(readlink -f $0))/../../jars"
  trun="java -cp $jars/ribose-0.0.0.jar $vmargs com.characterforming.ribose.TRun"
  args="$1 $2 $3"
  if (($#==4)); then
    args="$args $4"
  fi
	{ time $trun $nil $target $args ; } 2>/tmp/$1.tmp
	echo -e "$(cat /tmp/$1.tmp | tr '\r\n\t' ' ' | tr -s ' ')\t$1" >/tmp/$1.time
fi
#set +x